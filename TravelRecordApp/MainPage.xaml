<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecordApp.MainPage">

    <StackLayout VerticalOptions="Center" Margin="24">
        <Entry x:Name="EmailEntry" Placeholder="Email Address" Keyboard="Email"/>
        <Label x:Name="EmailLabel" Margin="4, 0, 0, 0" TextColor="Red"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Label x:Name="PasswordLabel" Margin="4, 0, 0, 48" TextColor="Red"/>
        <Button x:Name="LoginButton" Text="Log in" Style="{StaticResource primaryButton}" />
        
    </StackLayout>

</ContentPage>
